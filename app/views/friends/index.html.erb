<%if user_signed_in?%>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Name </th>
            
            <th>Email </th>
            <th>Phone </th>
            <th>Twitter </th>
           
        </tr>
    </thead>

    <tbody>
        <% @friends.each do |friend| %>
        <% if friend.user==current_user %>
        <tr>
            <td><%= link_to friend.first_name + ' ' + friend.last_name , friend %></td>
            
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>

        </tr>
        <%end%>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-dark" %>
<%else%>
<div class="jumbotron">
  <h1 class="display-4">Hey there!</h1>
  <p class="lead">This is a simple user management system developed by me (Dhyani Prajapati) while learning Rails Framework under the guidance of John Elder(CEO, Codemy)</p>
  <hr class="my-4">
  <p>Thank you for paying a visit on this site.</p>
</div>
    <%end%>